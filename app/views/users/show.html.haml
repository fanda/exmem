#columns
  - if @board.pref_columns
    - AppConfig.columns_count.times do |cnum|
      .column.ui-sortable
        - if boxes = @board.pref_columns[cnum.to_s]
          - boxes.each do |box|
            .box{:id => "#{box}", :class => "#{colour_for box}"}
              = render_partial_for box


  - else
    .column.ui-sortable
      #links_box.box.green
        = render :partial => '/links/box'
    .column.ui-sortable
      #phone_numbers_box.box.red
        = render :partial => '/phone_numbers/box'
      #thoughts_box.box.red
        = render :partial => '/thoughts/box'
    .column.ui-sortable
  .out

= render :partial => '/users/jsinit'
